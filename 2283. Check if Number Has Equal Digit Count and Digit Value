class Solution {
public:
    bool digitCount(string num) {
        map<int,int> mymap;
        for( auto it : num){
            mymap[it]++;
        }
        for(int i = 0; i < num.size(); i++){
            char ch = i + '0';
            if(num[i] != mymap[ch] + '0'){
                return false;
            }
        }
        return true;
    }
};
