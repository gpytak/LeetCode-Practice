class Solution {
public:
    string reversePrefix(string word, char ch) {
        int x = 0;

        for (int i = 0; i < word.length(); i++)
        {
            if (word[i] == ch)
            {
                x = i;
                break;
            }
        }

        for (int i = 0; i < x/2 + 1; i++)
        {
            char a = word[i];
            char b = word[x-i];
            word[i] = b;
            word[x-i] = a;
        }
        return word;
    }
};
