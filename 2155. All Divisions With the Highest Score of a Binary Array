class Solution {
public:
    vector<int> maxScoreIndices(vector<int>& nums) {
        int n = nums.size();
        int ones_in_right = 0;
        
        for (int num : nums) {
            if (num == 1) {
                ones_in_right++;
            }
        }
        
        int current_score = ones_in_right;
        int max_score = current_score;

        vector<int> ans;
        ans.push_back(0);

        int zeros_in_left = 0;

        for (int i = 0; i < n; ++i) {
            if (nums[i] == 0) {
                current_score++;
            } else {
                current_score--;
            }

            if (current_score > max_score) {
                max_score = current_score;
                ans.clear();
                ans.push_back(i + 1);
            } else if (current_score == max_score) {
                ans.push_back(i + 1);
            }
        }

        return ans;
    }
};
