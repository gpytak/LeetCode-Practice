class Solution {
public:
    vector<int> findLonely(vector<int>& nums) {
        unordered_map<int,int>mp;
        vector<int>ans;
        for(int n:nums)
            mp[n]++;
        for(pair<int,int>n:mp){
            int x=n.first,y=n.second;
            if(y==1 and mp.count(x+1)==0 and mp.count(x-1)==0)
            {
                ans.push_back(x);
            }
        }
        return ans;
    }
};
