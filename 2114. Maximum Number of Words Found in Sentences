class Solution {
public:
    int mostWordsFound(vector<string>& sentences) {
        int ans = 0;
        int temp = 0;

        for (int i = 0; i < sentences.size(); i++)
        {
            temp = 0;
            for (int j = 0; j < sentences[i].length(); j++)
            {
                if (sentences[i][j] == ' ')
                    temp++;
            }
            ans = max(ans, temp);
        }

        return ans+1;
    }
};
