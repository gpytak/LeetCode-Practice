class Solution {
public:
    int countCollisions(string dir) {
        int n = dir.size();
        int notcol=0;
        for(int i=0;i<n; i++){
            if(dir[i] != 'L')
                break;
            notcol++;
        }
        for(int i=n-1; i>=0; i--){
            if(dir[i] != 'R') 
                break;
            notcol++;
        }
        for(int i=0; i<n; i++){
            if(dir[i] == 'S') notcol++;
        }
		return n-notcol; 
    }
};
