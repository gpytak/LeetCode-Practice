class Solution {
public:
    int d;
    void check(string&s){
    
        if(s.size() == 1 || s[0] != '$') return;
        long long int num = 0;
        for(int i=1;i<s.size();i++){
            if(s[i] >= '0' && s[i] <= '9'){
                num *= 10;
                num += s[i] - '0';
            }
            else return;
        }
        
        num *= (100 - d);
        s = to_string(num);
		
        if(s.size() == 1) s = "00" + s;
        else if(s.size() == 2) s = "0" + s;
        
		s.push_back('.');
        int n = s.size();
        
		swap(s[n-1], s[n-2]);
        swap(s[n-3], s[n-2]);
        s = "$" + s;
		
    }
    
    string discountPrices(string s, int discount) {
        d = discount;
        vector<string> arr = {""};
        s.push_back(' ');
        for(char c: s){
            if(c == ' '){
                check(arr[arr.size()-1]);
                arr.push_back("");
            }
            else{
                arr[arr.size()-1].push_back(c);
            }
        }
        string ans = "";
        arr.pop_back();
        for(string&s: arr){ 
            ans += s;
            ans.push_back(' ');
        }
        ans.pop_back();
        return ans;
    }
};
