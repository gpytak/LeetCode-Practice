class Solution {
public:
    vector<long long> maximumEvenSplit(long long sum) {
        vector<long long> ans;
        if (sum % 2) return ans;
        
        long long cnt = sum/2;
        long long i = 1;

        while (cnt >= i)
        {
            ans.push_back(2*i);
            cnt -= i;
            i++;
        }
        if (cnt)
            ans[ans.size()-1] = ans[ans.size()-1] + (2*cnt);
        
        return ans;
    }
};
