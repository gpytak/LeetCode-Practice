class Solution {
public:
    string digitSum(string s, int k) {
        while (s.size()>k){
            string b="";
            for (int i=0,l=0;i<s.size();i++) {
                l+=s[i]-'0';
                if (((i+1)%k==0)||(i==s.size()-1)) {
                    b+=to_string(l);
                    l=0;
                }
            }
            s=b;
        }
        return s;
    }
};
