class Solution {
public:
    int hammingDistance(int x, int y) {
        int z = x^y; int count=0;
        while(z)
        {
            if (z&1)
                count++;
            z=z>>1;
        }
        return count;
    }
};

class Solution {
public:
    int minBitFlips(int start, int goal) {
        int xorResult = start ^ goal;
        int ans = 0;
        
        while (xorResult > 0) {
            ans += xorResult & 1; 
            xorResult >>= 1;
        }
        
        return ans;
    }
};
