class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        long long nPeriods = 0;
        int size = 1;
        for (int i = 0; i < prices.size(); ++i) 
        {
            if (i == 0) 
            {
                nPeriods++;
                continue;
            }

            if (prices[i-1] == prices[i] + 1) 
            {
                size++;
                nPeriods += size;
            }
            else 
            {
                size = 1;
                nPeriods++;
            }
        }
        return nPeriods;
    }
};
