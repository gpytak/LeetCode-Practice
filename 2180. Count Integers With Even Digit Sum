class Solution {
public:
    int countEven(int num) 
    {
        int currSum = 0;
        int store = num;
        
        while(num)
        {
            currSum += num % 10;    
            num /= 10;
        }
                
        if(currSum & 1)
            return (store-1)/2;
        
        else
            return store/2;
        
    }
};
