class Solution {
public:
    int maximumBags(vector<int>& capacity, vector<int>& rocks, int additionalRocks) {
        int n=capacity.size();
        vector<int>temp(n,0);
        for(int i=0;i<n;i++){
            temp[i]=capacity[i]-rocks[i];
        }
        sort(temp.begin(),temp.end());
        int i=0;
        int sum=0;
        int count=0;
        while(sum<=additionalRocks && i<n){
            sum+=temp[i];
            if(sum<=additionalRocks){count++;}
            i++;
        }
       return count;
    }
};
